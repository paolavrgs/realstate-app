%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }
    %title Real State
    = csrf_meta_tags
    = csp_meta_tag
    %link{ rel: "stylesheet", href: "https://fonts.googleapis.com/css?family=Montserrat:400,700,200" }
    %link{ rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" }
    %link{ rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" }
    = stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .wrapper
      .sidebar{"data-active-color" => "danger", "data-color" => "white"}
        /
          Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
        .logo
          %a.simple-text.logo-mini{href: "http://www.creative-tim.com"}
            .logo-image-small
              %img{src: "/assets/app/logo.png"}/
          %a.simple-text.logo-normal{href: "http://www.creative-tim.com"}
            MG INMOBILIARIAS
        .sidebar-wrapper
          %ul.nav
            %li{ class: "#{controller_name.eql?('dashboard') ? 'active' : ''}" }
              = link_to admin_dashboard_path, "data-method": "get" do
                %i.nc-icon.nc-bank
                %p Dashboard
            %li{ class: "#{controller_name.eql?('products') ? 'active' : ''}" }
              = link_to admin_products_path, "data-method": "get" do
                %i.nc-icon.nc-single-02
                %p Servicios Inmobiliarios
            %li{ class: "#{controller_name.eql?('cotizations') ? 'active' : ''}" }
              = link_to admin_cotizations_path, "data-method": "get" do
                %i.nc-icon.nc-single-02
                %p Cotizaciones
