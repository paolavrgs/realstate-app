.col-md-8
  .card.card-user
    .card-header
      %h5.card-title Edit Profile
    .card-body
      = form_for [:admin, @product] do |f|
        - if @product.errors.any?
          #error_explanation
            %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
            %ul
              - @product.errors.full_messages.each do |message|
                %li= message
        .row
          .col-md-6.pr-1
            .form-group
              -# %label Username
              = f.label :title
              -# %input.form-control{placeholder: "Username", type: "text", value: "michael23"}/
              = f.text_field :title, class: 'form-control'
          .col-md-6.pr-1
            .form-group
              = f.label :image
              = f.text_field :image, class: 'form-control'
          .col-md-6.pr-1
            .form-group
              = f.label :address
              = f.text_field :address, class: 'form-control'
          .col-md-6.pr-1
            .form-group
              = f.label :sqft
              = f.number_field :sqft, class: 'form-control'
        .actions
          = f.submit 'Save'
        .row
          .update.ml-auto.mr-auto
            %button.btn.btn-primary.btn-round{type: "submit"} Update Profile