.card.card-user
  .image
    -# = @product.image
    %img{ src: "https://images.unsplash.com/photo-1558981420-87aa9dad1c89?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80"}/
  .card-body
    .author
      %h5.title= @product.title
    %p.description.text-center
      = @product.address
  .card-footer
    %hr/
    .button-container
      .row
        .col-lg-3.col-md-6.col-6.ml-auto
          %h5
            = @product.sqft
            %br/
            %small Metros Cuadrados
        .col-lg-4.col-md-6.col-6.ml-auto.mr-auto
          %h5
            2GB
            %br/
            %small Used
        .col-lg-3.mr-auto
          %h5
            24,6$
            %br/
            %small Spent
= link_to 'Edit', edit_admin_product_path(@product), "data-method": "get"
\|
= link_to 'Back', admin_products_path, "data-method": "get"
